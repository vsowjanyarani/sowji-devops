pipeline {
    agent any
    stages {
        stage('git checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'global', url: 'https://github.com/namrata-aatmani/productionteam.git']]])
            }
        }
        stage('Build and pushToEcr') {
            steps {
                sh '''aws ecr get-login-password --region ap-southeast-1 | docker login --username AWS --password-stdin 136805086884.dkr.ecr.ap-southeast-1.amazonaws.com
                docker build -t sowji-ecr .
                docker tag sowji-ecr:latest 136805086884.dkr.ecr.ap-southeast-1.amazonaws.com/sowji-ecr:latest
                docker push 136805086884.dkr.ecr.ap-southeast-1.amazonaws.com/sowji-ecr:latest'''
            }
        }
        stage('deploy to kuberneetes'){
            steps {
                helm install 
            }
    }
    post {
        failure {
           slackSend channel: 'jenkins-alert', color: 'blue', failOnError: true, message: 'job build failed', teamDomain: 'aatmaaniacademy', tokenCredentialId: '4f746343-43f1-4e3a-8cb7-f990ee8ae99c'
        } 
        success {
           slackSend channel: 'jenkins-alert', color: 'blue', message: 'job build success', teamDomain: 'aatmaaniacademy', tokenCredentialId: '4f746343-43f1-4e3a-8cb7-f990ee8ae99c'
         } 
    }    
}
